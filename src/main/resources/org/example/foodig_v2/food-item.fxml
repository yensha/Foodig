<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="food_card" prefHeight="50.0" prefWidth="280.0" stylesheets="@Start_btn.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.foodig_v2.FoodItemController">
   <children>
      <HBox prefHeight="50.0" prefWidth="280.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="Imgview_Foodimg" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/dairy-products.png" />
               </image>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </ImageView>
            <VBox prefHeight="51.0" prefWidth="205.0">
               <children>
                  <Label fx:id="Label_Foodname" text="豆漿">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="16.0" prefWidth="230.0">
                     <children>
                        <Label fx:id="Date" text="期限：" />
                        <Label fx:id="Label_Expdate" text="2023-05-13" />
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </VBox>
            <ImageView fx:id="ImageView_delete" fitHeight="35.0" fitWidth="35.0" onMousePressed="#setParentController" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/trash.png" />
               </image>
               <HBox.margin>
                  <Insets left="5.0" top="6.0" />
               </HBox.margin>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
   <styleClass>
      <String fx:value="food-card" />
      <String fx:value="shadow" />
   </styleClass>
</AnchorPane>
